<UserControl x:Class="Editor.Views.Cards.GroupCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cards="clr-namespace:Editor.ViewModels.Cards"
             xmlns:p="clr-namespace:Editor.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance cards:GroupCardViewModel}"
             
             >
    
    
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Header="{x:Static p:Resources.HeaderRenameGroupCommand}"
                      Click="MenuItemRename_OnClick"
                      />
            <MenuItem Header="{x:Static p:Resources.HeaderDeleteGroup}" 
                      Command="{Binding Project.ScheduleController.RemoveGroupCommand}"
                      CommandParameter="{Binding Group}"/>
        </ContextMenu>
    </UserControl.ContextMenu>
 
    <Grid>
        <Border BorderThickness="1"
                BorderBrush="Black"
                Background="LemonChiffon" >
            <Grid>
                <TextBlock x:Name="TextBlock"
                       Text="{Binding Group.Name}"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="10,5,10,5" 
                       MouseDown="TextBlock_OnMouseDown"/>
                <TextBox x:Name="TextBox"
                         Text="{Binding Group.Name}"
                         Visibility="Collapsed"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         TextWrapping="Wrap"
                         Margin="10,5,10,5" 
                         LostFocus="TextBox_OnLostFocus"
                         PreviewKeyDown="TextBox_OnPreviewKeyDown"
                         />
            </Grid>
        </Border>
    </Grid>
</UserControl>
